
{
  "settings": {
    "index": {
      "number_of_shards": "5",
      "number_of_replicas": "1"
    },
    "analysis": {
      "filter": {
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "english_possessive_stemmer": {
          "type": "stemmer",
          "language": "possessive_english"
        }},
        "analyzer": {
          "rebuilt_english": {
            "tokenizer": "standard",
            "filter": [
              "english_possessive_stemmer",
              "lowercase",
              "english_stop",
              "english_stemmer"
            ]
          }
        }
      }
    },
  "mappings": {
    "document": {
      "properties": {
        "id_json": {
          "type": "keyword"
        
        },
        "label": {
          "type": "keyword"
        },
        
        "claim": {
          "type": "text",
          "analyzer": "rebuilt_english"
          },
        
        "topic":{
          "type": "keyword"
        }, 
        
        "author":{
          "type" : "keyword"
        },
        
        "role_of_the_author":{
          "type":"text",
          "analyzer": "rebuilt_english"
        }
      
        }
      }
    }
  }
}


    
